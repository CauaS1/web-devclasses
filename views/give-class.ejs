<%- include("./partials/header.ejs") %>
<link rel="stylesheet" href="/styles/study.css">

<body>
  <%- include("./partials/aside.ejs")%>


  <div class="green-background">
    <h1>Describe your <br> class.</h1>

    <img src="/images/give-class.svg" alt="Give class">
  </div>

  <div class="main-content">
    <div class="giveclass-input-container">
      <form action="/give-class/register" method="POST">
        <textarea required name="about" placeholder="Write about your class"></textarea>
        <select name="category" id="" required>
          <option value="Javascript">Javascript</option>
          <option value="React.js">React.js</option>
          <option value="React Native">React Native</option>
          <option value="PHP">PHP</option>
          <option value="HTML/CSS">HTML/CSS</option>
          <option value="Node.js">Node.js</option>
          <option value="Python">Python</option>
          <option value="Java">Java</option>
          <option value="C#">C#</option>
          <option value="Typescript">Typescript</option>
        </select>
        <input required type="number" name="price" placeholder="Price">

        <button type="submit">Create class</button>
      </form>
    </div>
  </div>

</body>
<%- include("./partials/footer.ejs") %>